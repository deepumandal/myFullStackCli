{
  "compilerOptions": {
    "module": "ESNext", // ✅ Good for ESM
    "target": "ES2020", // ✅ Modern Node features
    "moduleResolution": "node", // ✅ Resolve node_modules correctly
    "outDir": "dist", // ✅ Output folder
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"], // ✅ Targets all source files
  "exclude": ["node_modules", "dist", "bin.js"]
}
