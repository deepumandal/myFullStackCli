{
  "compilerOptions": {
    "module": "ESNext", // ✅ Good for ESM
    "target": "ES2020", // ✅ Modern Node features
    "moduleResolution": "node", // ✅ Resolve node_modules correctly
    "outDir": "dist", // ✅ Output folder
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", // ✅ Base URL for module resolution
    "paths": {
      "@/*": ["src/*"] // ✅ Aliases for src folder
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "src/templates/typescript-next-template/src/components/ui/Avatar/index.tsx",
    "src/templates/typescript-next-template/src/components/ui/Accordion/index.tsx"
  ], // ✅ Targets all source files
  "exclude": ["node_modules", "dist", "bin.js", "src_old", "src/templates/**"]
}
